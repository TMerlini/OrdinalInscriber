modules = ["nodejs-20", "bash", "web"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "NODE_ENV=production PORT=5000 node dist/index.js"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 3500
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5104
externalPort = 3001

[[ports]]
localPort = 5105
externalPort = 3002

[workflows]
runButton = "Run App (Exposed Port)"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Start API Server"
author = 40711098
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5104 NODE_ENV=development npm run dev"

[[workflows.workflow]]
name = "Start API Server (Secondary)"
author = 40711098
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5200 NODE_ENV=development npm run dev"

[[workflows.workflow]]
name = "Run App (Exposed Port)"
author = 40711098
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3000 SECONDARY_PORT=5001 NODE_ENV=development npm run dev"
